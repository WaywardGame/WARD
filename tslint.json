{
	"defaultSeverity": "warning",
	"rulesDirectory": [
		"./tslint/"
	],
	"rules": {
		"adjacent-overload-signatures": true,
		"align": [ true, "statements" ],
		"arrow-parens": [ true, "ban-single-arg-parens" ],
		"arrow-return-shorthand": true,
		"ban-comma-operator": true,
		"class-name": true,
		"curly": true,
		"cyclomatic-complexity": [ true, 7 ],
		"encoding": true,
		"eofline": true,
		"import-spacing": true,
		"indent": [  true, "tabs" ],
		"interface-name": true,
		"jsdoc-format": true,
		"linebreak-style": [ true, "CRLF" ],
		"match-default-export-name": true,
		"max-classes-per-file": [ true, 1 ],
		"max-file-line-count": [  true, 1000 ],
		"max-line-length": [true, 120],
		"member-access": [ true, "check-accessor" ],
		"newline-before-return": true,
		"no-angle-bracket-type-assertion": true,
		"no-arg": true,
		"no-consecutive-blank-lines": [ true, 3 ],
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-imports": true,
		"no-duplicate-super": true,
		"no-duplicate-switch-case": true,
		"no-duplicate-variable": true,
		"no-eval": true,
		"no-for-in-array": true,
		"no-import-side-effect": true,
		"no-invalid-template-strings": true,
		"no-invalid-this": true,
		"no-irregular-whitespace": true,
		"no-misused-new": true,
		"no-null-keyword": true,
		"no-parameter-properties": true,
		"no-require-imports": true,
		"no-return-await": true,
		"no-shadowed-variable": true,
		"no-string-literal": true,
		"no-string-throw": true,
		"no-switch-case-fall-through": true,
		"no-this-assignment": true,
		"no-trailing-whitespace": true,
		"no-unbound-method": [ true, "ignore-static" ],
		"no-unnecessary-callback-wrapper": true,
		"no-unnecessary-class": true,
		"no-unnecessary-initializer": true,
		"no-unnecessary-qualifier": true,
		"no-unnecessary-type-assertion": true,
		"no-unsafe-finally": true,
		"no-unused-expression": true,
		"no-unused-variable": true,
		"no-use-before-declare": true,
		"no-var-keyword": true,
		"no-var-requires": true,
		"no-void-expression": true,
		"number-literal-format": true,
		"object-literal-key-quotes": [ true, "as-needed" ],
		"object-literal-shorthand": [ true, "always" ],
		"object-literal-sort-keys": true,
		"ordered-imports": true,
		"prefer-conditional-expression": true,
		"prefer-const": true,
		"prefer-for-of": true,
		"prefer-method-signature": true,
		"prefer-object-spread": true,
		"prefer-switch": true,
		"prefer-template": true,
		"promise-function-async": true,
		"quotemark": [ true, "double", "avoid-template" ],
		"restrict-plus-operands": true,
		"return-undefined": true,
		"semicolon": true,
		"strict-type-predicates": true,
		"switch-final-break": true,
		"type-literal-delimiter": true,
		"typeof-compare": true,
		"unified-signatures": true,
		"use-default-type-parameter": true,
		"use-isnan": true,
		"variable-name": [ true, "allow-leading-underscore" ],
		
		// I would like to use the following rules but they're not configurable enough
		// "no-unsafe-any": true,
		// "prefer-function-over-method": true,
		// "no-object-literal-type-assertion": true,
		// "space-before-function-paren": true,
		
		"comment-format": [
			true,
			"check-space",
			"check-uppercase"
		],
		"member-ordering": [
			true,
			{
				"order": [
					"public-static-field",
					"protected-static-field",
					"private-static-field",
					"public-instance-field",
					"protected-instance-field",
					"private-instance-field",
					"public-constructor",
					"protected-constructor",
					"private-constructor",
					"public-instance-method",
					"protected-instance-method",
					"private-instance-method"
				]
			}
		],
		"one-line": [
			true,
			"check-catch",
			"check-finally",
			"check-else",
			"check-open-brace",
			"check-whitespace"
		],
		"padding-line-between-statements": [
			true,
			{
				"blankLine": "always",
				"prev": [
					"if",
					"switch",
					"for",
					"forof",
					"forin",
					"do",
					"while",
					"break",
					"continue",
					"throw"
				],
				"next": "*"
			},
			{
				"blankLine": "always",
				"prev": "*",
				"next": [
					"else",
					"elseif"
				]
			}
		],
		"strict-boolean-expressions": [
			true,
			"allow-null-union",
			"allow-undefined-union",
			"allow-string",
			"allow-number",
			"allow-mix",
			"allow-boolean-or-undefined"
		],
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never"
			}
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-type"
		]
	}
}