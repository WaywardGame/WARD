{
	"compilerOptions": {
		"target": "ES2019",
		"outDir": "out/",
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"declaration": true,
		"experimentalDecorators": true,
        "noImplicitReturns": true,
        "noUnusedParameters": false,
        "strict": true,
        "strictPropertyInitialization": false,
        "types": [
            "node"
        ],
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ]
	}
}